@model LireEnLigne.Views.User.LoginModel
@{
}
<head>
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet" />

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
	<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
		</div>
		<div class="row justify-content-center">
			<div class="col-md-7 col-lg-5">
				<div class="login-wrap p-4 p-md-5">
					<div class="icon d-flex align-items-center justify-content-center">
						<span class="fa fa-user-o"></span>
					</div>
					<h3 class="text-center mb-4">Se connecter</h3>
					<form action="/User/Login" class="login-form" method="post" role="form">
						<div class="form-group">
							<label for="Email">Email </label>
							<input type="text" class="form-control rounded-left" asp-for="Email" required>
						</div>
						<div class="form-group ">
							<label for="exampleInputEmail1">Mot de passe</label>
							<input type="password" class="form-control rounded-left" asp-for="Password" required>
						</div>
						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
							<!--<input type="button" class="form-control btn btn-primary rounded submit px-3" value="Se connecter" onclick="location.href='@Url.Action("OnLogin", "UserController")'" />-->
						</div>
						<div class="form-group ">
							
							<div class="text-md-left">
								<p>Vous n'avez pas un compte? <a href="/user/register">S'enregistrer</a></p>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

